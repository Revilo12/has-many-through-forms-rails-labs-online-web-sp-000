<%= form_for(post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories do |categories_builder| %>
    <%= categories_builder.label :name %>
    <%= categories_builder.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
