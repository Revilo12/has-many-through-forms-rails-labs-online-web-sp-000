<%= @post.title %><br>
<%= @post.content %><br>
<%= @post.categories.each do |category| %>
  <%= category.name %><br>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= comment.content if !!comment.content %><br \>
<% end %>
<%= @post.users.uniq.each do |user| %>
  <%= link_to user.username, user %><br>
<%end%>
<%= form_for @post do |f| %>
  <%= f.fields_for :comments do |comment_builder| %>
    <%= collection_select :user_id, User.all, :id, :username %>
    <%= comment_builder.fields_for :users do |users_builder| %>
      <% users_builder.label :user_name %>
      <% users_builder.text_field :user_name %>
    <% end %>
    <%= comment_builder.text_field :content %>
  <% end %>
  <%= f.submit %>
<% end %>
