<%= @post.title %><br>
<%= @post.content %><br>
<%= @post.categories.each do |category| %>
  <%= category.name %><br>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= comment.content if !!comment.content %><br \>
<% end %>
<%= @post.users.uniq.each do |user| %>
  <%= link_to user.username, user %><br>
<%end%>
<%= form_for @post do |f| %>
  <%= f.fields_for :comments do |comment_builder| %>
    <%= comment_builder.text_field :content %>
  <% end %>
  <%= f.submit %>
<% end %>
