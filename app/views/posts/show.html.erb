<%= @post.title %><br>
<%= @post.content %><br>
<%= @post.categories.each do |category| %>
  <%= category.name %><br>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= link_to comment.user.username, comment.user if !!comment.user %><br>
  <%= comment.content if !!comment.content %><br \>
<% end %>
<%= form_for @post do |f| %>
  <%= f.fields_for :comments do |comment_builder| %>
    <%= comment_builder.text_field :content %>
  <% end %>
  <%= f.submit %>
<% end %>
