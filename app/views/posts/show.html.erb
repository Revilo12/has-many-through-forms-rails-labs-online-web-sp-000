<%= @post.title %><br>
<%= @post.content %><br>
<%= @post.categories.each do |category| %>
  <%= category.name %><br>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= comment.content if !!comment.content %><br \>
<% end %>
<%= @post.users.uniq.each do |user| %>
  <%= link_to user.username, user %><br>
<%end%>
<%= form_for @post.comments.build do |f| %>
  <%= collection_select :user_ids, User.all, :id, :username %>
  <%= f.fields_for :users do |users_builder| %>
    <% users_builder.label :user_name %>
    <% users_builder.text_field :user_name %>
  <% end %>
  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>
  <%= f.hidden :post_id %>
  <%= f.submit %>
<% end %>
